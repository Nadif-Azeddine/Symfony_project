{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block styles %}
	<style>
		body::after {
			content: none !important;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="d-flex flex-column py-3 align-items-center col-12 vh-100 ">
		<div class="card col-md-8 rounded-4 shadow col-lg-6 col-11" style="background:#fff !important">
			<div class="card-body py-4">
			<h2 class=" text-center mb-5">Inscrription</h2>
				{{ form_errors(registrationForm) }}
				<div class="my-4"></div>
				{{ form_start(registrationForm) }}
				<div class="my-4"></div>
				<div class="row justify-content-between">
					<div class="col-6">
						{{ form_row(registrationForm.PseudoNom) }}
					</div>
					<div class="col-6">
						{{ form_row(registrationForm.profession) }}
					</div>
				</div>
				<div class="my-4"></div>
				<div class="row justify-content-between">
					<div class="col-6">
						{{ form_row(registrationForm.nom) }}
					</div>
					<div class="col-6">
						{{ form_row(registrationForm.prenom) }}
					</div>
				</div>
				<div class="my-4"></div>
				<div class="row justify-content-between">
					<div class="col-7">
						{{ form_row(registrationForm.dateNaissance) }}
					</div>
					<div class="col-5">
						{{ form_row(registrationForm.sexe) }}
					</div>
				</div>
				<div class="my-4"></div>

				{{ form_row(registrationForm.adresse) }}
				<div class="my-4"></div>

				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				<button class="btn px-5 col-12 mt-3 py-2 btn-primary rounded-5 shadow">Register</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
